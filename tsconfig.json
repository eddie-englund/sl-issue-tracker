{
  "compilerOptions": {
    "outDir": "dist",
		"noImplicitAny": false,
		"module": "commonjs",
		"noUnusedParameters": true,
		"target": "es2017",
		"lib": ["es7"],
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
    "declaration": true,
		"resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": [
			"node",
			"express",
			"dotenv",
      "cors"
		],
    "paths": {
			"@middleware/*": ["middleware/*"],
			"@db/*": ["db/*"],
			"@routes/*": ["routes/*"],
			"@util/*": ["util/*"],
			"@config/*": ["config/*"],
			"@lib/*": ["lib/*"],
		}
  },
  "exclude": ["node_modules", "dist"],
	"include": ["src/**/*", "src/**/*.json"]
}